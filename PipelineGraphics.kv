#:kivy 2.0.0

<BarHorzSep__@Label>:
    size_hint: 1.00, None
    height: dp(10)
    color: 0,0,0,1
    background_color: 0,0,0,1

<zPipelineNode>:
    title: id_title
    config: id_config

    BoxLayout:
        orientation: "vertical"
        size_hint: 0.90, 0.90
        pos_hint: { "center_x": 0.50, "center_y": 0.50 }
        canvas.before:
            Color:
                rgba: hex("#ffffff")    # white
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [dp(8),]

        BarHorzSep__
        Label:
            id: id_title
            text: "Title"
            size_hint: 0.90, None
            height: dp(30)
            pos_hint: { "center_x": 0.50 }
            canvas.before:
                Color:
                    rgba: hex("#0022ff")    # blue 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(8),]
        BarHorzSep__
        Label:
            id: id_config
            text: "Config"
            size_hint: 0.90, None
            size_hint_min_y: dp(30)
            pos_hint: { "center_x": 0.50 }
            canvas.before:
                Color:
                    rgba: hex("#0066ff")    # blue 2
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(8),]
        BarHorzSep__

